<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/tvSavedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe saved"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="20dp" />

    <!-- Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/input_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#F4F4F4"
        android:shape="rectangle">

        <EditText
            android:id="@+id/etSearchSaved"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Search saved recipes..."
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search" />

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSaved"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:nestedScrollingEnabled="true" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="#C4C4C4"/>

            <TextView
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#C4C4C4"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- SEARCH -->
        <LinearLayout
            android:id="@+id/navSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_search"
                android:tint="#C4C4C4"/>

            <TextView
                android:id="@+id/textSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="#C4C4C4"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- SAVED -->
        <LinearLayout
            android:id="@+id/navSaved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconSaved"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_saved"
                android:tint="#FFA200"/>

            <TextView
                android:id="@+id/textSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="#FFA200"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>